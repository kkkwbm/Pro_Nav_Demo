# ================================================================================
# TEBAR DEMO FRONTEND - ENVIRONMENT CONFIGURATION
# ================================================================================
# Copy this file to .env.development or .env.production and fill in your values
#
# IMPORTANT: Never commit .env files with real credentials to version control!
# ================================================================================

# ----------------------------------------
# ENVIRONMENT IDENTIFICATION
# ----------------------------------------
NODE_ENV=development
VITE_ENV=development

# ----------------------------------------
# API CONFIGURATION
# ----------------------------------------
# Backend API URL (use localhost for development, your domain for production)
VITE_API_URL=http://localhost:8080
VITE_API_BASE_PATH=/api

# API Timeout settings
VITE_API_TIMEOUT=30000
VITE_API_RETRY_COUNT=3

# ----------------------------------------
# GOOGLE SERVICES
# ----------------------------------------
# Google Maps API Key - get yours at: https://console.cloud.google.com/
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Google Calendar API configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com

# ----------------------------------------
# APPLICATION FEATURES
# ----------------------------------------
# Feature flags
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_ANALYTICS=false

# Development tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_PROFILER=false

# ----------------------------------------
# UI/UX CONFIGURATION
# ----------------------------------------
# Default pagination settings
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# File upload settings (should match backend)
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
VITE_MAX_SERVICE_PHOTOS=5

# ----------------------------------------
# PERFORMANCE OPTIMIZATION
# ----------------------------------------
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true
VITE_CACHE_MAX_AGE=86400

# ----------------------------------------
# SECURITY CONFIGURATION
# ----------------------------------------
VITE_ENABLE_CSP=false
VITE_ENABLE_HTTPS_ONLY=false

# Session and token management
VITE_TOKEN_STORAGE_TYPE=localStorage
VITE_AUTO_LOGOUT_MINUTES=60

# ----------------------------------------
# THIRD-PARTY SERVICES
# ----------------------------------------
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Analytics configuration (optional)
VITE_ANALYTICS_ID=your_analytics_id
VITE_ERROR_REPORTING_DSN=your_error_reporting_dsn

# ----------------------------------------
# LOGGING
# ----------------------------------------
VITE_LOG_LEVEL=debug
VITE_ENABLE_API_LOGGING=true
